<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.ProfileActivity"
        android:background="@color/bg">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="hideKeyboard"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profile_circle"
                    android:layout_marginTop="35dp" />

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jhon Smith"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="20sp"
                    android:textColor="@color/_333333"
                    android:layout_marginTop="10dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="35dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_login_rec"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp">

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="left"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="30dp"
                            android:text="William Jonson"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                            android:textColor="@color/_1B242D"
                            android:singleLine="true"/>


                            <ImageView
                                android:id="@+id/et1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_edit"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_login_rec"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/etNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="left"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="30dp"
                            android:text="+880 000 111 333"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                            android:textColor="@color/_1B242D"
                            android:singleLine="true"/>

                        <ImageView
                            android:id="@+id/et2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_login_rec"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/etMail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="left"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="30dp"
                            android:text="@string/email"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                            android:textColor="@color/_1B242D"
                            android:singleLine="true"/>

                        <ImageView
                            android:id="@+id/et3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_login_rec"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/etAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="left"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="30dp"
                            android:text="@string/address"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                            android:textColor="@color/_1B242D" />

                        <ImageView
                            android:id="@+id/et4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp" />

                    </TableRow>

                </TableLayout>

                <TextView
                    android:id="@+id/saveProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/ic_rec_blue"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Save Now"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>