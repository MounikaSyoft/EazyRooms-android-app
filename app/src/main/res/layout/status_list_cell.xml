<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp">
    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/order_bg">

        <LinearLayout
            android:id="@+id/txtOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel Desk"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/_242A37"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/message"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A201"
                android:textColor="@color/_242A37"
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:gravity="right"
                android:layout_marginEnd="15dp"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:layout_below="@+id/txtOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxx021"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/_242A37"
            android:textSize="18sp"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request Name"
                    android:layout_weight="1"
                    android:textColor="@color/_242A37"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extra towels"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/_242A37"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="16sp"
                    android:layout_marginEnd="15dp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Towels"
                    android:textColor="@color/_242A37"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/_242A37"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="16sp"
                    android:layout_marginEnd="15dp"/>

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

             <!--   <ng.max.slideview.SlideView
                    android:id="@+id/slideView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sv_buttonBackgroundColor="@color/button_bg_color"
                    app:sv_buttonImage="@drawable/button_img"
                    app:sv_slideBackgroundColor="@color/slide_bg_color"
                    app:sv_slideText="@string/slide_text"
                    app:sv_slideTextColor="@color/slide_text_color"
                    tools:ignore="MissingClass" />-->

                <TextView
                    android:id="@+id/tvReject"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_reject_rec"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Reject"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                   android:layout_marginStart="60dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvAccept"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_accept_rec"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="Accept"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>