<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/chat_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/chat_profile" />

                <TextView
                    app:layout_constraintEnd_toStartOf="@id/chat_room_number"
                    app:layout_constraintStart_toEndOf="@id/chat_img"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/chat_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="vamsi"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/_333333"
                    android:textSize="19sp" />
                <TextView
                    app:layout_constraintEnd_toStartOf="@id/chat_time"
                    app:layout_constraintStart_toStartOf="@id/chat_name"
                    app:layout_constraintTop_toBottomOf="@id/chat_name"
                    android:id="@+id/chat_msg"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:paddingEnd="5dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Hey,Hi After long time"
                    android:textColor="@color/_8A959E" />
                <TextView

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/chat_room_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="A101"
                    android:textColor="@color/_EE335E"
                    android:textSize="14sp"
                    android:background="@color/_FCE1E7"/>
               <!-- <TextView
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="@id/chat_room_number"
                    app:layout_constraintStart_toStartOf="@id/chat_room_number"
                    app:layout_constraintTop_toBottomOf="@id/chat_room_number"
                    android:id="@+id/chat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="2"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="12sp" />-->

                <TextView
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="@id/chat_room_number"
                    app:layout_constraintStart_toStartOf="@id/chat_room_number"
                    app:layout_constraintTop_toBottomOf="@id/chat_room_number"
                    android:id="@+id/chat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="2"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/_8A959E"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center">

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
</layout>